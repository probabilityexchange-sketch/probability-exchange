# Probability Exchange - Production Environment Variables
# Copy this to .env and fill in your actual values

# Application
APP_NAME=Probability Exchange
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Security (CHANGE THESE!)
SECRET_KEY=your_production_secret_key_here
JWT_SECRET_KEY=your_production_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Database
DATABASE_URL=sqlite:///./marketpulse.db

# CORS - Add your production domain
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com,http://YOUR_VPS_IP
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,YOUR_VPS_IP

# API Keys
POLYROUTER_API_KEY=your_polyrouter_key_here
KALSHI_API_KEY=your_kalshi_key_here
KALSHI_SECRET_KEY=your_kalshi_secret_here
NEWS_API_KEY=your_news_api_key_here
MANIFOLD_API_KEY=your_manifold_key_here
POLYMARKET_API_KEY=your_polymarket_key_here

# Telegram (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
